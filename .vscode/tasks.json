{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "GCC: Build",
			"type": "shell",
			"command": "g++",
			"args": [
				"-g",
				"${workspaceFolder}/src/*.cpp",
				"${workspaceFolder}/src/Entries/*.cpp",
				"${workspaceFolder}/src/Encryption/*.cpp",
				"-o",
				"${workspaceFolder}/bin/test",
				"-D",
				"WINDOWS=0",
				"-D",
				"ESP_32=1",
				"-D",
				"TARGET=WINDOWS"
			],
			"problemMatcher": []
		},
		{
			"label": "GCC: Run",
			"type": "shell",
			"command": "${workspaceFolder}/bin/test",
			"dependsOn": [
				"GCC: Build"
			],
			"problemMatcher": []
		},
		{
			"type": "PlatformIO",
			"task": "Build",
			"problemMatcher": [
				"$platformio"
			],
			"group": "build",
			"label": "PlatformIO: Build"
		}
	]
}